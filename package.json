{
  "name": "productmanager",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "npm run test:unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/ --ignore-pattern=tests/integration",
    "test:integration": "NODE_ENV=test DATABASE_URL=postgresql://postgres:password@productmanager_db_test:5432/productmanager_test?schema=public jest tests/integration --runInBand",
    "test:all": "npm run test:unit && npm run test:integration",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:test": "NODE_ENV=test DATABASE_URL=postgresql://postgres:password@localhost:5433/productmanager_test?schema=public prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:studio:test": "NODE_ENV=test DATABASE_URL=postgresql://postgres:password@localhost:5433/productmanager_test?schema=public prisma studio",
    "db:reset:test": "NODE_ENV=test DATABASE_URL=postgresql://postgres:password@localhost:5433/productmanager_test?schema=public prisma migrate reset --force",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:migrate": "docker compose exec app npx prisma migrate deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.0"
  }
}
